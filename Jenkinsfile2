pipeline {
  agent any 
    tools {
      maven 'M2_HOME'
    }
  stages {
    stage ('Git Checkout') {
      steps {
        git 'https://github.com/cbabu85/DevOpsAddressBook.git'
      }
  }
    stage (' Build Package') {
      steps {
        sh 'mvn clean package'
      }
  }
    stage ('Build the Docker Image of my package') {
      steps {
       sh 'docker build -t cbabu85/addressbook.war .'
        }
      }
    }
}
